      <div class="container">
         <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Trakt</a>
         </div>
         <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
               <li class="dropdown">
                  <a class="dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Films <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                     <li><a href="@Url.Action("Index","Films")">Alle Films</a></li>
                     <li><a href="@Url.Action("Index","Collecties")">Collecties</a></li>
                     <li><a href="@Url.Action("Tags", "Films")">Tags</a></li>
                  </ul>
               </li>
               <li><a href="@Url.Action("Index","Series")">Series</a></li>
               <li><a href="@Url.Action("Index","Acteurs")">Acteurs</a></li>
            </ul>
            @Html.Partial("_LoginPartial")
            <div class="col-sm-2 navbar-right">
               @using (Html.BeginForm("Zoeken", "Home", FormMethod.Get, new { @class = "navbar-form" }))
               {
                  <div class="input-group" role="search">
                     <input class="form-control" placeholder="Zoeken" name="q" required />
                     <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                     </div>
                  </div>
               }
            </div>
