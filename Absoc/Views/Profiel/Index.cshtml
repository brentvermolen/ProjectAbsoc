@model Absoc.Models.IndexViewModel
@{
    ViewBag.Title = "Profiel";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
   <h4></h4>
   <hr />
   @using (Html.BeginForm("UpdateProfiel", "Profiel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
   {
      @Html.AntiForgeryToken()
      <h4>Wijzig uw account.</h4>
      <hr />
      @Html.ValidationSummary("", new { @class = "text-danger" })
      <div class="form-group">
         @Html.LabelFor(m => m.Gebruiker.Voornaam, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gebruiker.Voornaam, new { @class = "form-control" })
         </div>
      </div>
      <div class="form-group">
         @Html.LabelFor(m => m.Gebruiker.Achternaam, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gebruiker.Achternaam, new { @class = "form-control" })
         </div>
      </div>
      <div class="form-group">
         @Html.LabelFor(m => m.Gebruiker.Geboortedatum, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gebruiker.Geboortedatum, new { @class = "form-control" })
         </div>
      </div>
      <div class="form-group">
         @Html.LabelFor(m => m.Gebruiker.Adres, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gebruiker.Adres, new { @class = "form-control" })
         </div>
      </div>
      <div class="form-group">
         @Html.LabelFor(m => m.Gebruiker.Postcode, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gebruiker.Postcode, new { @class = "form-control" })
         </div>
      </div>

      <div class="form-group">
         @Html.LabelFor(m => m.Gebruiker.Email, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
            @Html.DisplayFor(m => m.Gebruiker.Email, new { @class = "form-control" })
         </div>
      </div>
      <div class="form-group">
         <label class="col-md-2 control-label">Wachtwoord</label>
         <div class="col-md-10">
            @if (Model.HasPassword)
            {
               @Html.ActionLink("Verander uw wachtwoord", "ChangePassword")
            }
            else
            {
               @Html.ActionLink("Maak hier een wachtwoord aan", "SetPassword")
            }
         </div>
      </div>
      <div class="form-group">
         <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Wijzig Gegevens" />
         </div>
      </div>
   }

